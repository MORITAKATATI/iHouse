
@{
    ViewBag.Title = "Search";
}

<h2>Search a property</h2>
<div>
    <form method="post" action="~/Property/Search">
        <table>
            <tr>
                <th>Region</th>
                <th>Suburb</th>
                <th>Type</th>
                <th></th>
            </tr>
            <tr>
                <td><input type="text" name="Region" /></td>
                <td><input type="text" name="Suburb" /></td>
                <td><input type="text" name="Type" /></td>
                <td><input type="submit" value="Search" /></td>
            </tr>
        </table>
    </form>
</div>
<table class="table">
    @if (Model.Count == 0)
    {
        <tr>
            <td style="color:red">Sorry, we couldn't find a matched property</td>
        </tr>
    }
    else
    {
        <tr>
            <th>Region</th>
            <th>Suburb</th>
            <th>Location</th>
            <th>Property Type</th>
            <th>Number of Rooms</th>
            <th>Floor Area</th>
            <th>Land Area</th>
            <th>RV</th>
            <th>Email</th>
        </tr>
        foreach (var item in Model)
        {
            <tr>
                <td>@item.Region</td>
                <td>@item.Suburb</td>
                <td>@item.Location</td>
                <td>@item.Type</td>
                <td>@item.Room</td>
                <td>@item.FloorArea</td>
                <td>@item.LandArea</td>
                <td>@item.RV</td>
                <td>@item.Email</td>
            </tr>
        }

    }
    
</table>